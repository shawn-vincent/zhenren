{
  "name": "zhenren",
  "description": "A universal React Native app with Electron desktop support",
  "author": "Your Name",
  "main": "expo-router/entry",
  "homepage": "./",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "electron": "electron electron/main.js",
    "electron-dev": "NODE_ENV=development electron electron/main.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write .",
    "lint:expo": "expo lint",
    "lint:biome": "biome lint .",
    "format": "biome format --write .",
    "check": "npm run typecheck && npm run lint:biome && npm run lint:expo",
    "build": "npm run build:ios && npm run build:android && npm run build:web",
    "build:ios": "eas build --platform ios --local",
    "build:android": "eas build --platform android --local",
    "build:web": "expo export -p web --output-dir dist/web",
    "build:electron": "npm run build:web && electron-builder",
    "build:osx": "npm run build:web && electron-builder --mac",
    "build:osx-arm64": "npm run build:web && electron-builder --mac --arm64",
    "build:osx-x64": "npm run build:web && electron-builder --mac --x64",
    "build:osx-universal": "npm run build:web && electron-builder --mac --arm64 --x64",
    "build:windows": "npm run build:web && electron-builder --win"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "@tamagui/babel-plugin": "^1.132.15",
    "@tamagui/config": "^1.132.15",
    "@tamagui/lucide-icons": "^1.132.15",
    "expo": "~53.0.20",
    "expo-blur": "~14.1.5",
    "expo-constants": "~17.1.7",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-linking": "~7.1.7",
    "expo-router": "~5.1.4",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.10",
    "expo-web-browser": "~14.2.0",
    "nativewind": "^4.1.23",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "tamagui": "^1.132.15"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@biomejs/biome": "^2.1.3",
    "@types/react": "~19.0.10",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~9.2.0",
    "lightningcss": "^1.30.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3"
  },
  "private": true,
  "build": {
    "appId": "com.zhenren.app",
    "productName": "Zhenren",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/web/**/*",
      "electron/main.js",
      {
        "from": ".",
        "to": ".",
        "filter": [
          "package.json"
        ]
      }
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
